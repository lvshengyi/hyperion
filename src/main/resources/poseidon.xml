<?xml version="1.0" encoding="ISO-8859-1"?>

<configuration>
    <dataSource id="mysql" type="POOL"> <!-- 数据源类型：POOLED、UNPOOLED, id用于切换环境 -->
        <property name="driver" value="com.mysql.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost:3306/hyperion_test?characterEncoding=utf-8"/>
        <property name="username" value="root"/>
        <property name="password" value="root"/>

        <property name="maxIdleConnectionNum" value="20"/>
        <property name="maxActiveConnectionNum" value="100"/>
        <property name="connectionExpireTime" value="60"/> <!-- 线程时效时间 -->
    </dataSource>
</configuration>